[color]
  branch      = always
  diff        = auto
  interactive = always
  status      = always
  ui          = auto

[user]
  email = noonsilk+-noonsilk@gmail.com
  name  = silky

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light    = true

[merge]
    conflictstyle = diff3

[alias]
  d    = difftool
  hist = log --oneline --graph --decorate
  pwl  = push --force-with-lease

[push]
  default = matching

[diff]
  submodule  = log
  colorMoved = default

[difftool]
  prompt = false

[status]
  submodulesummary = 1

[credential]
  helper = gnome-keyring

[core]
  editor = nvim
  pager = delta

[filter "lfs"]
  clean    = git-lfs clean -- %f
  process  = git-lfs filter-process
  required = true
  smudge   = git-lfs smudge -- %f

[init]
  defaultBranch = main
